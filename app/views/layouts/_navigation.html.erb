<!-- Header -->
<header id="header">
  <div class="container">
    <div class="row header">
      <!-- Logo -->
      <div class="col-xs-2 logo">
        <%=link_to image_tag("logo.png", alt: "World Pro Skiing"), root_path%>
      </div>
      <!-- //Logo// -->

      <!-- Navigation File -->
      <div class="col-md-10">

        <!-- Mobile Button Menu -->
        <div class="mobile-menu-button">
          <i class="fa fa-list-ul"></i>
        </div>
        <!-- //Mobile Button Menu// -->
        <nav>
          <ul class="navigation">
            <li>
              <%=link_to root_path do %>
                <span class="label-nav">
                  Home
                </span>
                <span class="label-nav-sub" data-hover="The World Pro Skiing Foundation">
                  The World Pro Skiing Foundation
                </span>
              <%end%>
            </li>
            <li>
              <%=link_to about_path do %>
                <span class="label-nav">
                  About
                </span>
                <span class="label-nav-sub" data-hover="Our Mission and Board">
                  Our Mission and Board
                </span>
              <%end%>
            </li>
            <li>
              <%=link_to donate_path do %>
                <span class="label-nav">
                  Donate
                </span>
                <span class="label-nav-sub" data-hover="Support World Pro Skiing">
                  Support World Pro Skiing
                </span>
              <%end%>
            </li>
          </ul>
        </nav>

        <!-- Mobile Nav. Container -->
        <ul class="mobile-nav">
          <li class="responsive-searchbox">
            <!-- Responsive Nave -->
            <form action="#" method="get">
              <input type="text" class="searchbox-inputtext" id="searchbox-inputtext-mobile" name="s" />
              <button class="icon-search"></button>
            </form>
            <!-- //Responsive Nave// -->
          </li>
        </ul>
        <!-- //Mobile Nav. Container// -->
      </div>
      <!-- Nav -->

    </div>
  </div>
</header>
<!-- //Header// -->