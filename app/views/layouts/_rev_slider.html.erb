  <div class="rev-slider-banner-full  rev-slider-full">
    <ul>
      <li data-transition="fade" data-slotamount="7" data-masterspeed="300" >
        <%= image_tag "photos/start.jpg", data: {fullwidthcentering:"on"}%>

        <div class="tp-caption slider-text-title sft str alert alert-grey"
           data-x="20"
           data-y="250"
           data-speed="300"
           data-start="800"
           data-easing="easeOutCubic" data-end="6000" data-endspeed="500">Our Mission</div>


        <div class="tp-caption slider-text-description sft str alert alert-grey"  data-x="20" data-y="300" data-start="1000" data-easing="easeOutBack" data-end="4500" data-endspeed="500">
